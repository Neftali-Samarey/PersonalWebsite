
 <!-- This section will render components in a slider form -->
 <section class="page_body" style="text-align: center;">
   <h1 class="heighten">Projects</h1>
  <!-- Display a slider componet  -->
  {{#carousel-container transitionInterval=300 as |ui controls|}}
    <!-- Buttons outside of the loop -->
    <button class="leftButton" id="leftBtn" onclick={{controls.next}}> &#x3c;</button>
    <button class="rightButton" id="rightBtn" onclick={{controls.previous}} >&#x3e;</button>
    
    <!-- Slider container -->
    {{#each this.projects as |itemObject|}}
      {{#ui.item}}
       <ProjectCanvas @projectTitle="{{itemObject.name}}" @bgColor="{{itemObject.backgroundThemeColor}}" @projectDescription={{itemObject.description}}/> <!-- Call the method per each transition -->
      {{/ui.item}}
      
    {{/each}}

  {{/carousel-container}}

  {{slider-page}}

<!-- TESTING A CANVAS FOR A PROJECT SLIDER -->


 </section>
{{yield}}